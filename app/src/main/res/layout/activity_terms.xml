<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DetailsScreens.EditTermActivity">

<Button
    android:id="@+id/editTermButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="@string/edit_term"
    android:background="@color/colorPrimaryDark"
    android:textColor="@color/colorPrimary"
    app:layout_constraintEnd_toStartOf="@+id/newTermButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/termsRecycler" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/termsRecycler"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="100dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/newTermButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="@string/new_term"
    android:background="@color/colorPrimaryDark"
    android:textColor="@color/colorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/editTermButton"
    app:layout_constraintTop_toBottomOf="@+id/termsRecycler" />

</androidx.constraintlayout.widget.ConstraintLayout>